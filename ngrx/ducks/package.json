{
  "name": "@co-it/ngrx-ducks",
  "version": "0.4.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/co-it/co-it.git"
  },
  "scripts": {
    "build": "ng-packagr",
    "publish": "npm publish ./dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/public_api.ts"
    },
    "dest": "dist",
    "whitelistedNonPeerDependencies": [
      "angular",
      "@types/jest"
    ]
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)(spec))\\.ts$",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupTestFrameworkScriptFile": "./src/lib/test/setup.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@angular/common": "^7.0.1",
    "@angular/compiler": "^7.0.1",
    "@angular/compiler-cli": "^7.0.1",
    "@angular/core": "^7.0.1",
    "@angular/platform-browser": "^7.0.1",
    "@angular/platform-browser-dynamic": "^7.0.1",
    "@ngrx/store": "^6.1.0",
    "@types/jest": "^23.3.8",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "jest": "^23.6.0",
    "jest-preset-angular": "^6.0.1",
    "ng-packagr": "^4.4.0",
    "rxjs": "^6.3.1",
    "ts-jest": "^23.1.4",
    "tsickle": "^0.33.1",
    "tslib": "^1.9.3",
    "typescript": "~3.1.4",
    "zone.js": "^0.8.26"
  },
  "peerDependencies": {
    "@angular/common": "^7.0.1",
    "@angular/core": "^7.0.1",
    "@ngrx/store": "^6.1.0"
  }
}
