{
  "name": "co-it",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "release": "lerna version && yarn build && lerna run publish"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.10.5",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "ngrx/*",
    "rxjs/*"
  ]
}
