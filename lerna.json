{
  "version": "12.4.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["ngrx/*", "rxjs/*"],
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": "main"
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
}
